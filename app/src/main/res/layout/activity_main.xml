<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_entrance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homework"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/entry_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Вход"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcome_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/entry_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="189dp"
        android:text="Добро пожаловать!"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signIn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/entry_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="251dp"
        android:gravity="center"
        android:text="Выполните вход \n или зарегистрируйтесь"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/email_text"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="416dp"
        android:layout_marginBottom="270dp"
        android:background="@drawable/bg_emailbutton"
        android:hint="Введите вашу почту"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/password_text"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="480dp"
        android:layout_marginBottom="206dp"
        android:background="@drawable/bg_emailbutton"
        android:hint="Введите пароль"
        android:inputType="textPassword"
        android:textColor="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/entry_button"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="137dp"
        android:backgroundTint="@color/bg_color"
        android:text="Войти"
        android:textColor="@color/white"
        app:cornerRadius="5dp" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="91dp"
        android:text="Забыли пароль?"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/goText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="90dp"
        android:text="Нажми сюда" />

</RelativeLayout>




